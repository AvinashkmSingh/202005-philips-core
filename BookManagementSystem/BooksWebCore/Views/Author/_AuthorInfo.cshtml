@model ConceptArchitect.BookManagement.Author

<div class="row">
    <div class="col-md-7">
        <table class="table table-striped table-hover">

            <tr>
                <th>Biograpy</th>
                <td>@Model.Biography</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>@Model.Email</td>
            </tr>

            <tr>
                <th>Birth Date</th>
                <td>@Model.BirthDate</td>
            </tr>

            <tr>
                <th>Death Date</th>
                <td>@Model.DeathDate</td>
            </tr>


            <tr>
                <th>Age</th>
                <td>@Model.Age</td>
            </tr>
        </table>

    </div>
    <div class="col-md-5">
        <img src="@Model.Photograph" width="150" />
    </div>
</div>
